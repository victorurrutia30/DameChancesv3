@{
    ViewData["Title"] = "Inicio del Usuario";
}

<div class="user-dashboard-layout d-flex">
    <!-- Sidebar ficticio izquierdo -->
    <aside class="user-sidebar d-none d-md-block">
        <div class="sidebar-header text-center mb-4">
            <i class="bi bi-heart-fill fs-2 text-white"></i>
            <h5 class="text-white mt-2">DameChance</h5>
        </div>
        <ul class="nav flex-column text-white px-3">
            <li class="nav-item mb-2"><i class="bi bi-house me-2"></i>Inicio</li>
            <li class="nav-item mb-2"><i class="bi bi-person-circle me-2"></i>Mi perfil</li>
            <li class="nav-item mb-2"><i class="bi bi-chat-dots me-2"></i>Mensajes</li>
            <li class="nav-item mb-2"><i class="bi bi-gear me-2"></i>Configuración</li>
        </ul>
    </aside>

    <!-- Contenido principal -->
    <main class="user-main-content flex-grow-1">
        <section class="user-welcome-banner text-center p-5 mb-5">
            <h1 class="display-4 fw-bold">¡Bienvenido/a a DameChance!</h1>
            <p class="lead">Conoce gente, descubre intereses y crea nuevas historias.</p>
        </section>

        <div class="container mb-5">
            <h2 class="mb-4 text-center">Personas que podrían interesarte</h2>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @* Reutilizando tus cards *@
                @for (int i = 1; i <= 6; i++)
                {
                    <div class="col">
                        <div class="match-card h-100 shadow-sm">
                            <img src="https://via.placeholder.com/300x200.png?text=Perfil+@i" class="card-img-top rounded-top" alt="Perfil @i">
                            <div class="card-body">
                                <h5 class="card-title">Nombre @i</h5>
                                <p class="card-text mb-1"><strong>Edad:</strong> @(20 + i)</p>
                                <p class="card-text mb-1"><strong>Género:</strong> Femenino</p>
                                <p class="card-text"><strong>Intereses:</strong> Música, Lectura, Cine</p>
                                <button class="btn btn-match w-100"><i class="bi bi-heart-fill me-1"></i> Me interesa</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="user-explore-more text-center p-4">
            <h3 class="mb-3">¿No encontraste a tu persona ideal?</h3>
            <p>¡Explora más perfiles y descubre quién te puede sorprender!</p>
        </div>
    </main>
</div>
